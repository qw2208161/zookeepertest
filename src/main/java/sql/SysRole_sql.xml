<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace=".dao.SysRoleDao">

    <!-- SysRole结果集 -->
    <resultMap id="SysRoleMap" class=".model.SysRole" >
        <result column="rid" property="rid" jdbcType="VARCHAR"/>
        <result column="rname" property="rname" jdbcType="VARCHAR"/>
        <result column="rdesc" property="rdesc" jdbcType="VARCHAR"/>
        <result column="rval" property="rval" jdbcType="VARCHAR"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_role</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        rid, rname, rdesc, rval, created, updated
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        rname, rdesc, rval, created, updated
    </sql>

    <!-- 查询的条件 -->
    <sql id="all_query_condition">
        <isNotNull prepend="AND" property="rid">
            rid = #rid#
        </isNotNull>
        <isNotNull prepend="AND" property="rname">
            rname = #rname#
        </isNotNull>
        <isNotNull prepend="AND" property="rdesc">
            rdesc = #rdesc#
        </isNotNull>
        <isNotNull prepend="AND" property="rval">
            rval = #rval#
        </isNotNull>
        <isNotNull prepend="AND" property="created">
            created = #created#
        </isNotNull>
        <isNotNull prepend="AND" property="updated">
            updated = #updated#
        </isNotNull>
    
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="rid">
                rid = #rid#
            </isNotNull>
            <isNotNull prepend="AND" property="rname">
                rname = #rname#
            </isNotNull>
            <isNotNull prepend="AND" property="rdesc">
                rdesc = #rdesc#
            </isNotNull>
            <isNotNull prepend="AND" property="rval">
                rval = #rval#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="rname">
                rname = #rname#
            </isNotNull>
            <isNotNull prepend="AND" property="rdesc">
                rdesc = #rdesc#
            </isNotNull>
            <isNotNull prepend="AND" property="rval">
                rval = #rval#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <dynamic prepend="SET">
            <isNotNull prepend="," property="rname">
                rname = #rname#
            </isNotNull>
            <isNotNull prepend="," property="rdesc">
                rdesc = #rdesc#
            </isNotNull>
            <isNotNull prepend="," property="rval">
                rval = #rval#
            </isNotNull>
            <isNotNull prepend="," property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" parameterClass=".model.SysRole">
        INSERT INTO <include refid="table_name"/>
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="rname">
                rname
            </isNotNull>
            <isNotNull prepend="," property="rdesc">
                rdesc
            </isNotNull>
            <isNotNull prepend="," property="rval">
                rval
            </isNotNull>
            <isNotNull prepend="," property="created">
                created
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated
            </isNotNull>
        </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="rname">
                #rname#
            </isNotNull>
            <isNotNull prepend="," property="rdesc">
                #rdesc#
            </isNotNull>
            <isNotNull prepend="," property="rval">
                #rval#
            </isNotNull>
            <isNotNull prepend="," property="created">
                #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                #updated#
            </isNotNull>
        </dynamic>
        <selectKey resultClass="java.lang.String" keyProperty="rid">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterClass=".model.SysRole">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            rid = #rid#
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterClass="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            rid = #rid#
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterClass=".model.SysRole">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterClass="java.lang.String" resultMap="SysRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            rid = #rid#
    </select>
    
    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterClass=".model.SysRole" resultMap="SysRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterClass=".model.SysRole" resultClass="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</sqlMap>