<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace=".dao.SysUserRoleDao">

    <!-- SysUserRole结果集 -->
    <resultMap id="SysUserRoleMap" class=".model.SysUserRole" >
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="role_id" property="roleId" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_user_role</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        user_id, role_id
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        
    </sql>

    <!-- 查询的条件 -->
    <sql id="all_query_condition">
        <isNotNull prepend="AND" property="userId">
            user_id = #userId#
        </isNotNull>
        <isNotNull prepend="AND" property="roleId">
            role_id = #roleId#
        </isNotNull>
    
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="userId">
                user_id = #userId#
            </isNotNull>
            <isNotNull prepend="AND" property="roleId">
                role_id = #roleId#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <dynamic prepend="WHERE">
        </dynamic>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <dynamic prepend="SET">
        </dynamic>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" parameterClass=".model.SysUserRole">
        INSERT INTO <include refid="table_name"/>
        <dynamic prepend="(" close=")">
        </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
        </dynamic>
        <selectKey resultClass="java.lang.String" keyProperty="userId">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterClass=".model.SysUserRole">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            user_id = #userId#
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterClass="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            user_id = #userId#
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterClass=".model.SysUserRole">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterClass="java.lang.String" resultMap="SysUserRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            user_id = #userId#
    </select>
    
    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterClass=".model.SysUserRole" resultMap="SysUserRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterClass=".model.SysUserRole" resultClass="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</sqlMap>