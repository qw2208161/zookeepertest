<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace=".dao.SysUserDao">

    <!-- SysUser结果集 -->
    <resultMap id="SysUserMap" class=".model.SysUser" >
        <result column="uid" property="uid" jdbcType="VARCHAR"/>
        <result column="uname" property="uname" jdbcType="VARCHAR"/>
        <result column="nick" property="nick" jdbcType="VARCHAR"/>
        <result column="pwd" property="pwd" jdbcType="VARCHAR"/>
        <result column="salt" property="salt" jdbcType="VARCHAR"/>
        <result column="lock" property="lock" jdbcType="INTEGER"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_user</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        uid, uname, nick, pwd, salt, lock, created, updated
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        uname, nick, pwd, salt, lock, created, updated
    </sql>

    <!-- 查询的条件 -->
    <sql id="all_query_condition">
        <isNotNull prepend="AND" property="uid">
            uid = #uid#
        </isNotNull>
        <isNotNull prepend="AND" property="uname">
            uname = #uname#
        </isNotNull>
        <isNotNull prepend="AND" property="nick">
            nick = #nick#
        </isNotNull>
        <isNotNull prepend="AND" property="pwd">
            pwd = #pwd#
        </isNotNull>
        <isNotNull prepend="AND" property="salt">
            salt = #salt#
        </isNotNull>
        <isNotNull prepend="AND" property="lock">
            lock = #lock#
        </isNotNull>
        <isNotNull prepend="AND" property="created">
            created = #created#
        </isNotNull>
        <isNotNull prepend="AND" property="updated">
            updated = #updated#
        </isNotNull>
    
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="uid">
                uid = #uid#
            </isNotNull>
            <isNotNull prepend="AND" property="uname">
                uname = #uname#
            </isNotNull>
            <isNotNull prepend="AND" property="nick">
                nick = #nick#
            </isNotNull>
            <isNotNull prepend="AND" property="pwd">
                pwd = #pwd#
            </isNotNull>
            <isNotNull prepend="AND" property="salt">
                salt = #salt#
            </isNotNull>
            <isNotNull prepend="AND" property="lock">
                lock = #lock#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="uname">
                uname = #uname#
            </isNotNull>
            <isNotNull prepend="AND" property="nick">
                nick = #nick#
            </isNotNull>
            <isNotNull prepend="AND" property="pwd">
                pwd = #pwd#
            </isNotNull>
            <isNotNull prepend="AND" property="salt">
                salt = #salt#
            </isNotNull>
            <isNotNull prepend="AND" property="lock">
                lock = #lock#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <dynamic prepend="SET">
            <isNotNull prepend="," property="uname">
                uname = #uname#
            </isNotNull>
            <isNotNull prepend="," property="nick">
                nick = #nick#
            </isNotNull>
            <isNotNull prepend="," property="pwd">
                pwd = #pwd#
            </isNotNull>
            <isNotNull prepend="," property="salt">
                salt = #salt#
            </isNotNull>
            <isNotNull prepend="," property="lock">
                lock = #lock#
            </isNotNull>
            <isNotNull prepend="," property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" parameterClass=".model.SysUser">
        INSERT INTO <include refid="table_name"/>
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="uname">
                uname
            </isNotNull>
            <isNotNull prepend="," property="nick">
                nick
            </isNotNull>
            <isNotNull prepend="," property="pwd">
                pwd
            </isNotNull>
            <isNotNull prepend="," property="salt">
                salt
            </isNotNull>
            <isNotNull prepend="," property="lock">
                lock
            </isNotNull>
            <isNotNull prepend="," property="created">
                created
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated
            </isNotNull>
        </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="uname">
                #uname#
            </isNotNull>
            <isNotNull prepend="," property="nick">
                #nick#
            </isNotNull>
            <isNotNull prepend="," property="pwd">
                #pwd#
            </isNotNull>
            <isNotNull prepend="," property="salt">
                #salt#
            </isNotNull>
            <isNotNull prepend="," property="lock">
                #lock#
            </isNotNull>
            <isNotNull prepend="," property="created">
                #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                #updated#
            </isNotNull>
        </dynamic>
        <selectKey resultClass="java.lang.String" keyProperty="uid">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterClass=".model.SysUser">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            uid = #uid#
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterClass="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            uid = #uid#
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterClass=".model.SysUser">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterClass="java.lang.String" resultMap="SysUserMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            uid = #uid#
    </select>
    
    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterClass=".model.SysUser" resultMap="SysUserMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterClass=".model.SysUser" resultClass="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</sqlMap>