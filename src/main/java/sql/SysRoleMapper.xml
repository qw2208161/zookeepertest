<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".mapper.SysRoleMapper">

    <!-- SysRole结果集 -->
    <resultMap id="SysRoleMap" type=".entity.SysRole" >
        <id column="rid" property="rid" jdbcType="VARCHAR"/>
        <result column="rname" property="rname" jdbcType="VARCHAR"/>
        <result column="rdesc" property="rdesc" jdbcType="VARCHAR"/>
        <result column="rval" property="rval" jdbcType="VARCHAR"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_role</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        rid, rname, rdesc, rval, created, updated
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        rname, rdesc, rval, created, updated
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="rid != null and '' != rid">
                AND rid = #{rid}
            </if>
            <if test="rname != null and '' != rname">
                AND rname = #{rname}
            </if>
            <if test="rdesc != null and '' != rdesc">
                AND rdesc = #{rdesc}
            </if>
            <if test="rval != null and '' != rval">
                AND rval = #{rval}
            </if>
            <if test="created != null">
                AND created = #{created}
            </if>
            <if test="updated != null">
                AND updated = #{updated}
            </if>
        </trim>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="rname != null and '' != rname">
                AND rname = #{rname}
            </if>
            <if test="rdesc != null and '' != rdesc">
                AND rdesc = #{rdesc}
            </if>
            <if test="rval != null and '' != rval">
                AND rval = #{rval}
            </if>
            <if test="created != null">
                AND created = #{created}
            </if>
            <if test="updated != null">
                AND updated = #{updated}
            </if>
        </trim>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <set>
            <if test="rname != null and '' != rname">
                rname = #{rname}, 
            </if>
            <if test="rdesc != null and '' != rdesc">
                rdesc = #{rdesc}, 
            </if>
            <if test="rval != null and '' != rval">
                rval = #{rval}, 
            </if>
            <if test="created != null">
                created = #{created}, 
            </if>
            <if test="updated != null">
                updated = #{updated}
            </if>
        </set>
    </sql>

    <!-- 批量更新条件带set -->
    <sql id="all_batch_set_condition_with_set">
        <set>
            <if test="item.rname != null and '' != item.rname">
                rname = #{item.rname}, 
            </if>
            <if test="item.rdesc != null and '' != item.rdesc">
                rdesc = #{item.rdesc}, 
            </if>
            <if test="item.rval != null and '' != item.rval">
                rval = #{item.rval}, 
            </if>
            <if test="item.created != null">
                created = #{item.created}, 
            </if>
            <if test="item.updated != null">
                updated = #{item.updated}
            </if>
        </set>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" useGeneratedKeys="true" keyProperty="rid" keyColumn="rid" parameterType=".entity.SysRole">
        INSERT INTO <include refid="table_name"/>
        (
            <include refid="all_columns_not_with_id"/>
        )
        VALUES (
            #{rname}, #{rdesc}, #{rval}, #{created}, #{updated}
        )
    </insert>

    <!--根据对象属性插入-->
    <insert id="insertBatchByProperty" useGeneratedKeys="true" keyProperty="rid" keyColumn="rid" parameterType="java.util.List">
        INSERT INTO <include refid="table_name"/>
        (
            <include refid="all_columns_not_with_id"/>
        )
        VALUES
        <foreach collection="list" item="item" separator="," index = "index">
        (
            #{item.rname}, #{item.rdesc}, #{item.rval}, #{item.created}, #{item.updated}
        )
        </foreach>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterType=".entity.SysRole">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            rid = #{rid}
    </update>

    <!--根据主键批量更新-->
    <update id="updateBatchByPrimaryKey" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE <include refid="table_name"/>
                <include refid="all_batch_set_condition_with_set"/>
            WHERE
                rid = #{item.rid}
        </foreach>
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            rid = #{rid}
    </delete>

    <!--根据主键列表批量删除-->
    <delete id="deleteBatchByPrimaryKey" parameterType="java.util.List">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            rid
        IN
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterType=".entity.SysRole">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="SysRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            rid = #{rid}
    </select>

    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterType=".entity.SysRole" resultMap="SysRoleMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterType=".entity.SysRole" resultType="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</mapper>