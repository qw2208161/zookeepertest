<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace=".dao.SysRolePermDao">

    <!-- SysRolePerm结果集 -->
    <resultMap id="SysRolePermMap" class=".model.SysRolePerm" >
        <result column="role_id" property="roleId" jdbcType="VARCHAR"/>
        <result column="perm_val" property="permVal" jdbcType="VARCHAR"/>
        <result column="perm_type" property="permType" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_role_perm</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        role_id, perm_val, perm_type
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        perm_type
    </sql>

    <!-- 查询的条件 -->
    <sql id="all_query_condition">
        <isNotNull prepend="AND" property="roleId">
            role_id = #roleId#
        </isNotNull>
        <isNotNull prepend="AND" property="permVal">
            perm_val = #permVal#
        </isNotNull>
        <isNotNull prepend="AND" property="permType">
            perm_type = #permType#
        </isNotNull>
    
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="roleId">
                role_id = #roleId#
            </isNotNull>
            <isNotNull prepend="AND" property="permVal">
                perm_val = #permVal#
            </isNotNull>
            <isNotNull prepend="AND" property="permType">
                perm_type = #permType#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="permType">
                perm_type = #permType#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <dynamic prepend="SET">
            <isNotNull prepend="," property="permType">
                perm_type = #permType#
            </isNotNull>
        </dynamic>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" parameterClass=".model.SysRolePerm">
        INSERT INTO <include refid="table_name"/>
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="permType">
                perm_type
            </isNotNull>
        </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="permType">
                #permType#
            </isNotNull>
        </dynamic>
        <selectKey resultClass="java.lang.String" keyProperty="roleId">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterClass=".model.SysRolePerm">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            role_id = #roleId#
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterClass="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            role_id = #roleId#
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterClass=".model.SysRolePerm">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterClass="java.lang.String" resultMap="SysRolePermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            role_id = #roleId#
    </select>
    
    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterClass=".model.SysRolePerm" resultMap="SysRolePermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterClass=".model.SysRolePerm" resultClass="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</sqlMap>