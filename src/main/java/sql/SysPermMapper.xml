<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".mapper.SysPermMapper">

    <!-- SysPerm结果集 -->
    <resultMap id="SysPermMap" type=".entity.SysPerm" >
        <id column="pval" property="pval" jdbcType="VARCHAR"/>
        <result column="parent" property="parent" jdbcType="VARCHAR"/>
        <result column="pname" property="pname" jdbcType="VARCHAR"/>
        <result column="ptype" property="ptype" jdbcType="INTEGER"/>
        <result column="leaf" property="leaf" jdbcType="INTEGER"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_perm</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        pval, parent, pname, ptype, leaf, created, updated
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        parent, pname, ptype, leaf, created, updated
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="pval != null and '' != pval">
                AND pval = #{pval}
            </if>
            <if test="parent != null and '' != parent">
                AND parent = #{parent}
            </if>
            <if test="pname != null and '' != pname">
                AND pname = #{pname}
            </if>
            <if test="ptype != null">
                AND ptype = #{ptype}
            </if>
            <if test="leaf != null">
                AND leaf = #{leaf}
            </if>
            <if test="created != null">
                AND created = #{created}
            </if>
            <if test="updated != null">
                AND updated = #{updated}
            </if>
        </trim>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="parent != null and '' != parent">
                AND parent = #{parent}
            </if>
            <if test="pname != null and '' != pname">
                AND pname = #{pname}
            </if>
            <if test="ptype != null">
                AND ptype = #{ptype}
            </if>
            <if test="leaf != null">
                AND leaf = #{leaf}
            </if>
            <if test="created != null">
                AND created = #{created}
            </if>
            <if test="updated != null">
                AND updated = #{updated}
            </if>
        </trim>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <set>
            <if test="parent != null and '' != parent">
                parent = #{parent}, 
            </if>
            <if test="pname != null and '' != pname">
                pname = #{pname}, 
            </if>
            <if test="ptype != null">
                ptype = #{ptype}, 
            </if>
            <if test="leaf != null">
                leaf = #{leaf}, 
            </if>
            <if test="created != null">
                created = #{created}, 
            </if>
            <if test="updated != null">
                updated = #{updated}
            </if>
        </set>
    </sql>

    <!-- 批量更新条件带set -->
    <sql id="all_batch_set_condition_with_set">
        <set>
            <if test="item.parent != null and '' != item.parent">
                parent = #{item.parent}, 
            </if>
            <if test="item.pname != null and '' != item.pname">
                pname = #{item.pname}, 
            </if>
            <if test="item.ptype != null">
                ptype = #{item.ptype}, 
            </if>
            <if test="item.leaf != null">
                leaf = #{item.leaf}, 
            </if>
            <if test="item.created != null">
                created = #{item.created}, 
            </if>
            <if test="item.updated != null">
                updated = #{item.updated}
            </if>
        </set>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" useGeneratedKeys="true" keyProperty="pval" keyColumn="pval" parameterType=".entity.SysPerm">
        INSERT INTO <include refid="table_name"/>
        (
            <include refid="all_columns_not_with_id"/>
        )
        VALUES (
            #{parent}, #{pname}, #{ptype}, #{leaf}, #{created}, #{updated}
        )
    </insert>

    <!--根据对象属性插入-->
    <insert id="insertBatchByProperty" useGeneratedKeys="true" keyProperty="pval" keyColumn="pval" parameterType="java.util.List">
        INSERT INTO <include refid="table_name"/>
        (
            <include refid="all_columns_not_with_id"/>
        )
        VALUES
        <foreach collection="list" item="item" separator="," index = "index">
        (
            #{item.parent}, #{item.pname}, #{item.ptype}, #{item.leaf}, #{item.created}, #{item.updated}
        )
        </foreach>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterType=".entity.SysPerm">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            pval = #{pval}
    </update>

    <!--根据主键批量更新-->
    <update id="updateBatchByPrimaryKey" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE <include refid="table_name"/>
                <include refid="all_batch_set_condition_with_set"/>
            WHERE
                pval = #{item.pval}
        </foreach>
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            pval = #{pval}
    </delete>

    <!--根据主键列表批量删除-->
    <delete id="deleteBatchByPrimaryKey" parameterType="java.util.List">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            pval
        IN
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterType=".entity.SysPerm">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="SysPermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            pval = #{pval}
    </select>

    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterType=".entity.SysPerm" resultMap="SysPermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterType=".entity.SysPerm" resultType="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</mapper>