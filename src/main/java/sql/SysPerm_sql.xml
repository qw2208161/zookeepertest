<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace=".dao.SysPermDao">

    <!-- SysPerm结果集 -->
    <resultMap id="SysPermMap" class=".model.SysPerm" >
        <result column="pval" property="pval" jdbcType="VARCHAR"/>
        <result column="parent" property="parent" jdbcType="VARCHAR"/>
        <result column="pname" property="pname" jdbcType="VARCHAR"/>
        <result column="ptype" property="ptype" jdbcType="INTEGER"/>
        <result column="leaf" property="leaf" jdbcType="INTEGER"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 表名 -->
    <sql id="table_name">sys_perm</sql>

    <!-- 所有字段 -->
    <sql id="all_columns">
        pval, parent, pname, ptype, leaf, created, updated
    </sql>

    <!-- 不带主键的所有字段 -->
    <sql id="all_columns_not_with_id">
        parent, pname, ptype, leaf, created, updated
    </sql>

    <!-- 查询的条件 -->
    <sql id="all_query_condition">
        <isNotNull prepend="AND" property="pval">
            pval = #pval#
        </isNotNull>
        <isNotNull prepend="AND" property="parent">
            parent = #parent#
        </isNotNull>
        <isNotNull prepend="AND" property="pname">
            pname = #pname#
        </isNotNull>
        <isNotNull prepend="AND" property="ptype">
            ptype = #ptype#
        </isNotNull>
        <isNotNull prepend="AND" property="leaf">
            leaf = #leaf#
        </isNotNull>
        <isNotNull prepend="AND" property="created">
            created = #created#
        </isNotNull>
        <isNotNull prepend="AND" property="updated">
            updated = #updated#
        </isNotNull>
    
    </sql>

    <!-- 查询条件带where -->
    <sql id="all_query_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="pval">
                pval = #pval#
            </isNotNull>
            <isNotNull prepend="AND" property="parent">
                parent = #parent#
            </isNotNull>
            <isNotNull prepend="AND" property="pname">
                pname = #pname#
            </isNotNull>
            <isNotNull prepend="AND" property="ptype">
                ptype = #ptype#
            </isNotNull>
            <isNotNull prepend="AND" property="leaf">
                leaf = #leaf#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 删除条件带where -->
    <sql id="all_delete_condition_with_where">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="parent">
                parent = #parent#
            </isNotNull>
            <isNotNull prepend="AND" property="pname">
                pname = #pname#
            </isNotNull>
            <isNotNull prepend="AND" property="ptype">
                ptype = #ptype#
            </isNotNull>
            <isNotNull prepend="AND" property="leaf">
                leaf = #leaf#
            </isNotNull>
            <isNotNull prepend="AND" property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="AND" property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 更新条件带set -->
    <sql id="all_set_condition_with_set">
        <dynamic prepend="SET">
            <isNotNull prepend="," property="parent">
                parent = #parent#
            </isNotNull>
            <isNotNull prepend="," property="pname">
                pname = #pname#
            </isNotNull>
            <isNotNull prepend="," property="ptype">
                ptype = #ptype#
            </isNotNull>
            <isNotNull prepend="," property="leaf">
                leaf = #leaf#
            </isNotNull>
            <isNotNull prepend="," property="created">
                created = #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated = #updated#
            </isNotNull>
        </dynamic>
    </sql>

    <!--根据对象属性插入-->
    <insert id="insertByProperty" parameterClass=".model.SysPerm">
        INSERT INTO <include refid="table_name"/>
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="parent">
                parent
            </isNotNull>
            <isNotNull prepend="," property="pname">
                pname
            </isNotNull>
            <isNotNull prepend="," property="ptype">
                ptype
            </isNotNull>
            <isNotNull prepend="," property="leaf">
                leaf
            </isNotNull>
            <isNotNull prepend="," property="created">
                created
            </isNotNull>
            <isNotNull prepend="," property="updated">
                updated
            </isNotNull>
        </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
            <isNotNull prepend="," property="parent">
                #parent#
            </isNotNull>
            <isNotNull prepend="," property="pname">
                #pname#
            </isNotNull>
            <isNotNull prepend="," property="ptype">
                #ptype#
            </isNotNull>
            <isNotNull prepend="," property="leaf">
                #leaf#
            </isNotNull>
            <isNotNull prepend="," property="created">
                #created#
            </isNotNull>
            <isNotNull prepend="," property="updated">
                #updated#
            </isNotNull>
        </dynamic>
        <selectKey resultClass="java.lang.String" keyProperty="pval">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!--根据主键更新-->
    <update id="updateByPrimaryKey" parameterClass=".model.SysPerm">
        UPDATE <include refid="table_name"/>
            <include refid="all_set_condition_with_set"/>
        WHERE
            pval = #pval#
    </update>

    <!--根据主键删除-->
    <delete id="deleteByPrimaryKey" parameterClass="java.lang.String">
        DELETE FROM
            <include refid="table_name"/>
        WHERE
            pval = #pval#
    </delete>

    <!--根据属性删除-->
    <delete id="deleteByProperty" parameterClass=".model.SysPerm">
        DELETE FROM <include refid="table_name"/>
        <include refid="all_delete_condition_with_where"/>
    </delete>

    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" parameterClass="java.lang.String" resultMap="SysPermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        WHERE
            pval = #pval#
    </select>
    
    <!-- 根据对象属性查询 -->
    <select id="selectByProperty" parameterClass=".model.SysPerm" resultMap="SysPermMap">
        SELECT
            <include refid="all_columns"/>
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

    <!-- 根据对象属性查询统计 -->
    <select id="countByProperty" parameterClass=".model.SysPerm" resultClass="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            <include refid="table_name"/>
        <include refid="all_query_condition_with_where"/>
    </select>

</sqlMap>